<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".LoginRequest">


    <Button
        android:id="@+id/Not_login"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/wildfont"
        android:text="로그인 없이 시작"
        android:textStyle="bold"
        app:backgroundTint="#C6BAA3E3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/join_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="120dp"
        android:drawableRight="@drawable/baseline_person_add_alt_24"
        android:fontFamily="@font/wildfont"
        android:paddingLeft="45dp"
        android:paddingRight="10dp"
        android:text="회원가입"
        android:textStyle="bold"
        app:backgroundTint="#A1ADF1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Not_login" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="279dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="8dp"
        android:background="#70FFFFFF"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/wildfont"
        android:hint="이메일"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="#70FFFFFF"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/wildfont"
        android:hint="비밀번호"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/login_email"
        app:layout_constraintStart_toStartOf="@+id/login_email"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="226dp"
        android:layout_height="54dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="19dp"
        android:drawableRight="@drawable/baseline_perm_identity_24"
        android:fontFamily="@font/wildfont"
        android:paddingLeft="45dp"
        android:paddingRight="10dp"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:backgroundTint="#9CEDA49F"
        app:layout_constraintBottom_toTopOf="@+id/join_button"
        app:layout_constraintStart_toStartOf="@+id/Not_login"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/wildfont"
        android:text="SuperGrow"
        android:textColor="#A1ADF1"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="182dp"
        android:layout_height="169dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/grwingg" />

</androidx.constraintlayout.widget.ConstraintLayout>