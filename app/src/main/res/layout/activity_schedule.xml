<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedulelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/joina">

    <!-- 일정 입력을 위한 EditText -->

    <!-- 일정 추가 버튼 -->

    <!-- 일정 삭제 버튼 -->

    <EditText
        android:id="@+id/editTextSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:background="#207A8ADD"
        android:fontFamily="@font/wildfont"
        android:hint="일정을 입력하세요"
        android:minHeight="48dp" />

    <!-- 삭제할 라인 입력을 위한 EditText -->

    <!-- 텍스트뷰로 일정 표시 -->

    <Button
        android:id="@+id/buttonAddSchedule"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSchedule"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#A1ADF1"
        android:fontFamily="@font/wildfont"
        android:text="일정 추가" />

    <Button
        android:id="@+id/buttonDeleteSchedule"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteTextSchedule"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#A1ADF1"
        android:fontFamily="@font/wildfont"
        android:text="일정 삭제" />

    <EditText
        android:id="@+id/deleteTextSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddSchedule"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/wildfont"
        android:background="#207A8ADD"
        android:hint="삭제할 라인을 입력하세요"
        android:minHeight="48dp" />

    <RelativeLayout
        android:id="@+id/textViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDeleteSchedule"
        android:layout_marginTop="19dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2Schedule"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="541dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/wildfont"
        android:text="일정이 없습니다"
        android:visibility="invisible"/>
</RelativeLayout>
